       //debugger;
      let masterstockqty = 0;
      let tableData = this.$refs["tableFields"].get();
     
        for (let i = 0; i < tableData.length; i++) {
          let stockqty = Number(tableData[i].bbiQty);
          if (!!stockqty) {
            masterstockqty += stockqty;
          }
        }
      this.formDataInfo.master.bbQty = masterstockqty;
    }
  },
  mounted() {
