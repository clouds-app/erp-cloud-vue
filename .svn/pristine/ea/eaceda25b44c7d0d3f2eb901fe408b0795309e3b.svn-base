<template>
  <Modal v-model="show" :mask-closable="maskClosable"  
  :scrollable="scrollable" :fullscreen="fullscreen"  :title="title"
    @on-ok="onOk" @on-cancel="onCancel" :width="width">
    <slot></slot>
    <div slot="footer">
      <Button @click="show=false">取消</Button>
      <Button :loading="loading" type="primary" @click="onOk">确定</Button>
    </div>
  </Modal>
</template>

<script>
  export default {
    data() {
      return {
        show: false,
        html: ''
      }
    },
    props: {
      loading:{
        type: Boolean,
        default: false
      },
      maskClosable: {
        type: Boolean,
        default: false
      },
      scrollable: {
        type: Boolean,
        default: true
      },
      fullscreen: {
        type: Boolean,
        default: true
      },
      title: {
        type: String,
        default: '窗口'
      },
      value: {
        type: Boolean,
        default: false
      },
      width: {
        type: String | Number,
        default: 'auto'
      },
      lazyTime: {
        required: false,
        default: 0
      }
    },
    watch: {
      show(n, o) {
        this.$emit('input', n);
      },
      value(n, o) {
       // debugger
        this.show = n;
      }
    },
    methods: {
      onOk() {
        this.$emit('on-ok');
      },
      onCancel() {
        this.$emit('on-cancel');
      }
    },
    created() {}
  }
</script>

