                      }
                    "
                  size="small"
                  :maxlength="20"
                ></Input>
              </td>
              <!-- 优惠方式 -->
              <td class="ivu-table-column-left" width="100">
                <Input
                  v-model="row.upiPriceLess"
                  @input="
                      value => {
                        valueChangeAssign(value, index, row, 'upiPriceLess');
                      }
                    "
