<script>
/**
 * @desc edit-purinit 供应商财务初始化 描述
 * 所有重要 可以重用的方法 放在了基类,继承即可用重复使用 dyBaseMixins,
 * 可以根据需求重写所需的方法:
 *
 * @params 参数
 *
 * @return 返回
 *
 * @author Andy Huang
 *
 * @created 2020/04/27
 */
import dayjs from "dayjs"
import optionSearch from "../../components/optionSearch";
import popup from '@/components/popup/popup'
import editBaseMixins from "../../mixins/edit";
import { deepCopy } from "view-design/src/utils/assist";
import { customValidator, uniqueValidator } from "@/libs/validator";
import referenceField from "@/components/referenceField/referenceField";
const default_formDataInfo = {
    // auditTime: "",
	// auditUser: "",
	// auditUsername: "",
	// companyId: 0,
	// createTime: "",
	// createUser: "",
	// createUsername: "",
	curyId: 0,
    custCode: "",
    coinCode: "",
	coinName: "",
	custId: 0,
	custName: "",
	hasDelete: false,
	// id: 0,
	// iisAudit: 0,
	omAmt: 0,
	omDate: new Date(dayjs().format("YYYY-MM-DD")),// 单据日期
	omDiscount: 0,
	omIvAmt: 0,
	omNo: "",
	omNoIvAmt: 0,
	omYm:new Date(dayjs().format("YYYY-MM-DD")), // 会计月份
	omZqAmt: 0,
	rate: 0,
	remark: "",
	status: 0,
	taxRat: 0,
	taxTp: "0",
	taxTypeText: "",
	// updateTime: "",
	// updateUser: "",
	// updateUsername: ""
};
export default {
  name: "edit-purinit",
  mixins: [editBaseMixins],
  components: {
    optionSearch,
    popup,
    referenceField
  },

  data() {
    return {
      actionSubtitle: "其他应收", // 当前操作副标题
      requestBaseUrl: "/account/otherMoeny", // 请求 查询 操作的基础路径
      formDataInfo: Object.assign({}, default_formDataInfo), // 防止添加和更新数据提交发生冲突
      // 需要验证的数据
      ruleValidate: {
        custCode: [
          { required: true, message: "客户编号不能为空", trigger: "blur" }
        ],
        omDate: [
          { required: true,type:'date',message: "单据日期不能为空", trigger: "blur" }
        ],
        omYm: [
          { required: true,type:'date',message: "会计月份不能为空", trigger: "blur" }
        ],
      }
    };
  },
  watch: {
     showWindow:function(n,o){
        if(n){
          let _self = this
          this.$nextTick(()=>{
             // 延迟赋值,不然数据还没有正确返回的情况下,无法绑定默认值
           setTimeout(() => {
               this.setDefaultData()
           }, 1000);
            
          })
        }
      },
},
  methods: {
     // 设置默认值
    setDefaultData(){
        if(this.formDataInfo.taxTp==''|| this.formDataInfo.taxTp==null){
            this.formDataInfo.taxTp = '0'
        }else{
             this.formDataInfo.taxTp =  this.formDataInfo.taxTp+''
        }
        if(this.formDataInfo.omDate==''|| this.formDataInfo.omDate==null){
            this.formDataInfo.omDate = new Date(dayjs().format("YYYY-MM-DD"))
        }else{
            this.formDataInfo.omDate = new Date(dayjs(this.formDataInfo.omDate).format("YYYY-MM-DD"))
        }

        if(this.formDataInfo.omYm==''|| this.formDataInfo.omYm==null){
            this.formDataInfo.omYm = new Date(dayjs().format("YYYY-MM-DD"))
        }else{
            this.formDataInfo.omYm = new Date(dayjs(this.formDataInfo.omYm).format("YYYY-MM-DD"))
        }
    },
    //单据日期 变动日期
    onChange_omDate(item){
       if(!_.isEmpty(item)){
              this.formDataInfo.omDate = new Date(item) 
          }
    },
     //会计月份 变动日期
    onChange_omYm(item){
       if(!_.isEmpty(item)){
              this.formDataInfo.omYm = new Date(item) 
          }
    },
      // 继承中修改,更新数据时,重置修改一些提交的数据
    resetformDataInfo (_data) {
         _data.omDate = dayjs(_data.omDate).format("YYYY-MM-DD")
         _data.omYm = dayjs(_data.omYm).format("YYYY-MM-DD")
      return _data
    },
     // 继承中修改,添加数据时,重置修改一些提交的数据
    resetAddformDataInfo (_data) {
         _data.omDate = dayjs(_data.omDate).format("YYYY-MM-DD")
         _data.omYm = dayjs(_data.omYm).format("YYYY-MM-DD")
      return _data
    },

      // 重写父类 关闭窗口时 触发事件
    closeActionTigger() {
      // fix 清除上次的错误提示 formDataInfo 为表单ref名称
      this.$refs["formDataInfo"].resetFields();
      this.formDataInfo = Object.assign({}, default_formDataInfo);
    },
    
  }
}
</script>

