<script>
import ReportPage from '../components/ReportPage'
import listBaseMixins from "../mixins/list";
import vTable from "@/components/tables/vTable";
import popup from "@/components/popup/popup";
export default {
    // 客户资料查询
    name:'customerReport',
    mixins: [listBaseMixins],
    components: {
        popup,
        vTable,
        ReportPage
    },
    data(){
        return {
            functionParams: {
                requestBaseUrl: "/report/custInfo/list",
            },
            page:{
                total:1,
                pageSize:20,
                pageNumber:1,
            },
            tableData:[],
             formDataInfo: {
                // 主表 
                master: {
                        bcFollowerId:'',
                        bcFollowerCode:'',
                        bcFollowerName:'',
                        bcSalerId:'',
                        bcSalerCode:'',
                        bcSalerName:'',
                        custId:'',
                        cusCode:'',
                        cusName:''
                  }
          }, 
        }
    },
    created(){
        this.loadCustomerReport()
    },
    methods:{
        change(data){
            this.page.pageNumber = data
            this.loadCustomerReport()
        },
        loadCustomerReport(name){
            if (!!name) this.page.pageNumber = 1
             this.tableData=[]
            let _url = this.functionParams.requestBaseUrl
            let data = {
                cusCode:this.formDataInfo.master.cusCode,
                salerCode:this.formDataInfo.master.bcSalerCode,
                followerCode:this.formDataInfo.master.bcFollowerCode
            }
            this.getDataByUrl(_url,data,{pageNumber:this.page.pageNumber,pageSize:this.page.pageSize}).then(res=>{
                this.tableData = res.records
                this.page.total =Number(res.total)
                this.page.pageSize =Number(res.size)
            })
        }
    }
}
</script>

