<template>
  <div class="menuClass" :style="{'height':menuHight+'px'}">
    <Card dis-hover style="border-bottom: 0px;">
       <p slot="title" id="menu">系统功能目录 </p>
        <Tree :data="resourceTreeData" @on-select-change="treeSelectEvent"></Tree>
        <Spin size="large" fix v-if="treeLoading"></Spin>
     </Card>
  </div>
</template>

<script>
import request from '@/libs/request'
export default{
  props: {
    menuHight: {
      type: Number || String,
      default: 420
    }
  },
  name: 'resourceTree',
  data () {
    return {
      treeLoading: false,
      resourceTreeData: []
    }
  },
  created () {
    this.getResourceTree()
  },
  methods: {
    getResourceTree () {
      this.treeLoading = true
      request.get('/sys/resource/tree').then(res => {
        this.resourceTreeData.push({
          title: '标准模块',
          expand: true,
          children: res.common,
          id: '0'
        }, {
          title: '非标模块',
          expand: true,
          children: res.owner
        })
        this.treeLoading = false
      }).catch(() => {
        this.treeLoading = false
      })
    },
    treeSelectEvent (a, b) {
      this.$emit('on-select-change', a, b)
    }
  }
}
</script>

<style>
#menu{
  text-align:center;
}
.menuClass{
  overflow-y:scroll;
  background: #ffffff;
}
</style>
