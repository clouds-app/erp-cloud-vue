<template>
  <div class="cl-moudle">
    <htmlTemplate
     ref="htmlTemplate"
      :currrentRowItem="currrentRowItem"
      @isLoaddingDone="getLoaddingDone"
      :requestBaseUrl="functionParams.requestBaseUrl"
      :uniqueId="functionParams.uniqueId"
      :queryParamsDefault="queryParamsDefault"
    >
    </htmlTemplate>
    <div ref="contextMenuTarget" class="content-container" :style="{ height: tableHeight + 'px' }">
      <Split :v-model="splitModel" mode="vertical">
        <div slot="top" class="demo-split-pane" ref="contextMenuTarget">
          <vTable :upDownMove="true"
            @row-dblclick="showDetailswindow"
            tabletitle="纸板入库"
            :height="tableHeight / 2"
            ref="master_list_table"
            :columns-url="functionParams.requestColBaseUrl + '/stockPurPaperJoinFm'"
            url="/stock/paperJoin/page"
            :pagination="true"
            @row-click="tableRowClick"
            name="stockPurPaperJoinFm"
          ></vTable>
        </div>
        <div slot="bottom" :style="{ 'padding-top': '6px' }">
          <Tabs>
            <TabPane label="纸板入库明细" name="name1">
              <vTable
                tabletitle="纸板入库明细"
                :height="tableHeight / 2 - 35"
                ref="tableFieldRef"
                :table-data="tableFieldData"
                :columns-url="functionParams.requestColBaseUrl + '/stockPurPaperJoinItemFm'"
                :pagination="false"
                name="stockPurPaperJoinItemFm"
              ></vTable>
            </TabPane>
          </Tabs>
        </div>
      </Split>
    </div>

    <editForm
     ref="editForm"
      :isLoaddingDone="isLoaddingDone"
      :form-detail-data="formDetailData"
      moduleName="worker"
      :action="action"
      @submit-success="search()"
      v-model="showEditWindow"
      :detailDisabled="detailDisabled"
      :detailConvertUpdate="detailConvertUpdate"
      :subfromData='tableFieldData'
    />
  </div>
</template>
<script>
import vTable from '@/components/tables/vTable'
import htmlTemplate from '../components/htmlTemplate'
// import editForm from "./edit/edit-warehouse";
import listBaseMixins from '../mixins/list'
import request from '@/libs/request'
export default {
  mixins: [listBaseMixins],
  components: {
    'editForm': function (resolve) { // 组件的异步加载
      require(['./edit/edit-paperJoin'], resolve)
    },

    htmlTemplate,
    vTable
  },
  data () {
    return {
      // who:'editForm', // 动态指定编辑控件
      functionParams: {
        requestBaseUrl: '/stock/paperJoin',
        uniqueId: 'paperJoinId'
      },
      // 查询参数 ,注意格式
      queryParamsDefault: [
        {
          title: '请输入入库单号',
          code: 'pjNumber',
          pjNumberCode: ''
        },
        {
          title: '请输入入库日期',
          name: 'pjDate$like',
          pjDate$like: ''
        }
        // {
        //   title: "请输入供应商名称",
        //   name: "supplierName$like",
        //   'supplierName$like': ""
        // }
      ],
      columns: [

      ],
      // 纸箱入库明细
      tableFieldColuns: [

      ]

    }
  },
  methods: {
    tableRowClick (rowData, rowIndex) {
      // debugger
      this.formDetailData = {} // 清除上次缓存数据 增加体验良好
      this.masterRowSelection = rowData
      if (rowData != null) {
        // debugger
        // 是否 确认 审核 反审核 删除 禁用等 提示标题 列数据
        this.currrentRowItem.rowName = rowData.supplierCode + ' ' + rowData.supplierName
      }
      if (this.masterRowSelection) {
        this.getItemDataById()
      }
    },
    // 获取入库明细
    getItemDataById () {
      // debugger
      let url = `/stock/paperJoin/item/list`
      let data = {
        paperJoinId: this.masterRowSelection.id
      }
      let _self = this
      request.post(url, data).then(res => {
        // debugger
        _self.tableFieldData = res
      })
    },
    // 重写父类方法, 更新操作
    handleUpdateEvent () {
      this.getItemDataById()
    },
    // 重写父类方法,确认当前行 是否可以删除,默认true可以删除,false 返回false 不可以删除
    canIDeleteRowItem () {
      let canDelete = true
      if (!!this.tableFieldData.length) {
        this.tableFieldData.filter(item=>{
          if (!!item.iisAcc) {
            canDelete = false
          }
        })
      }
      if (!canDelete) {
        let message = '当前数据存在已月结,不可操作'
        this.$Message.warning(message)
        return false
      }
      return true
    },
  }
}
</script>

